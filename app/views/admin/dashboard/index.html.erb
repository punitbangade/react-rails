<div class="flex flex-col md:flex-row md:items-center md:justify-between mb-8">
  <div class="mb-4 md:mb-0">
    <h1 class="text-2xl font-bold text-gray-900">Dashboard</h1>
    <p class="text-sm text-gray-500 mt-1">Welcome to your admin dashboard</p>
  </div>
  <div class="flex items-center bg-white px-4 py-2.5 rounded-lg shadow-sm border border-gray-200">
    <i class="fas fa-calendar-alt text-purple-600 mr-2"></i>
    <span class="text-sm font-medium text-gray-700"><%= Date.today.strftime('%A, %B %d, %Y') %></span>
  </div>
</div>

<!-- Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
  <!-- Products Stats -->
  <div class="bg-white rounded-xl shadow-lg overflow-hidden border border-gray-100 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
    <div class="p-6 bg-gradient-to-br from-purple-500 to-indigo-600 text-white relative overflow-hidden">
      <div class="absolute top-0 right-0 -mt-4 -mr-4 w-24 h-24 rounded-full bg-indigo-500 opacity-30"></div>
      <div class="absolute bottom-0 left-0 -mb-4 -ml-4 w-16 h-16 rounded-full bg-purple-400 opacity-20"></div>
      <div class="relative flex justify-between items-center">
        <div>
          <p class="text-sm font-medium text-purple-100">Total Products</p>
          <h2 class="text-3xl font-bold mt-1"><%= @total_products %></h2>
        </div>
        <div class="bg-white bg-opacity-20 backdrop-filter backdrop-blur-lg rounded-xl p-3 shadow-inner">
          <i class="fas fa-box text-2xl"></i>
        </div>
      </div>
    </div>
    <div class="px-6 py-4 bg-white">
      <%= link_to admin_products_path, class: "text-purple-600 hover:text-indigo-800 text-sm font-medium flex items-center group" do %>
        View all products
        <i class="fas fa-arrow-right ml-2 text-xs transition-transform duration-300 group-hover:translate-x-1"></i>
      <% end %>
    </div>
  </div>

  <!-- Categories Stats -->
  <div class="bg-white rounded-xl shadow-lg overflow-hidden border border-gray-100 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
    <div class="p-6 bg-gradient-to-br from-pink-500 to-rose-600 text-white relative overflow-hidden">
      <div class="absolute top-0 right-0 -mt-4 -mr-4 w-24 h-24 rounded-full bg-rose-500 opacity-30"></div>
      <div class="absolute bottom-0 left-0 -mb-4 -ml-4 w-16 h-16 rounded-full bg-pink-400 opacity-20"></div>
      <div class="relative flex justify-between items-center">
        <div>
          <p class="text-sm font-medium text-pink-100">Total Categories</p>
          <h2 class="text-3xl font-bold mt-1"><%= @total_categories %></h2>
        </div>
        <div class="bg-white bg-opacity-20 backdrop-filter backdrop-blur-lg rounded-xl p-3 shadow-inner">
          <i class="fas fa-tags text-2xl"></i>
        </div>
      </div>
    </div>
    <div class="px-6 py-4 bg-white">
      <%= link_to admin_categories_path, class: "text-pink-600 hover:text-rose-700 text-sm font-medium flex items-center group" do %>
        View all categories
        <i class="fas fa-arrow-right ml-2 text-xs transition-transform duration-300 group-hover:translate-x-1"></i>
      <% end %>
    </div>
  </div>

  <!-- Users Stats -->
  <div class="bg-white rounded-xl shadow-lg overflow-hidden border border-gray-100 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
    <div class="p-6 bg-gradient-to-br from-cyan-500 to-sky-600 text-white relative overflow-hidden">
      <div class="absolute top-0 right-0 -mt-4 -mr-4 w-24 h-24 rounded-full bg-sky-500 opacity-30"></div>
      <div class="absolute bottom-0 left-0 -mb-4 -ml-4 w-16 h-16 rounded-full bg-cyan-400 opacity-20"></div>
      <div class="relative flex justify-between items-center">
        <div>
          <p class="text-sm font-medium text-cyan-100">Total Users</p>
          <h2 class="text-3xl font-bold mt-1"><%= @total_users %></h2>
        </div>
        <div class="bg-white bg-opacity-20 backdrop-filter backdrop-blur-lg rounded-xl p-3 shadow-inner">
          <i class="fas fa-users text-2xl"></i>
        </div>
      </div>
    </div>
    <div class="px-6 py-4 bg-white">
      <%= link_to admin_users_path, class: "text-cyan-600 hover:text-sky-700 text-sm font-medium flex items-center group" do %>
        View all users
        <i class="fas fa-arrow-right ml-2 text-xs transition-transform duration-300 group-hover:translate-x-1"></i>
      <% end %>
    </div>
  </div>

  <!-- Orders Stats -->
  <div class="bg-white rounded-xl shadow-lg overflow-hidden border border-gray-100 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
    <div class="p-6 bg-gradient-to-br from-amber-500 to-orange-600 text-white relative overflow-hidden">
      <div class="absolute top-0 right-0 -mt-4 -mr-4 w-24 h-24 rounded-full bg-orange-500 opacity-30"></div>
      <div class="absolute bottom-0 left-0 -mb-4 -ml-4 w-16 h-16 rounded-full bg-amber-400 opacity-20"></div>
      <div class="relative flex justify-between items-center">
        <div>
          <p class="text-sm font-medium text-amber-100">Total Orders</p>
          <h2 class="text-3xl font-bold mt-1"><%= @total_orders %></h2>
        </div>
        <div class="bg-white bg-opacity-20 backdrop-filter backdrop-blur-lg rounded-xl p-3 shadow-inner">
          <i class="fas fa-shopping-cart text-2xl"></i>
        </div>
      </div>
    </div>
    <div class="px-6 py-4 bg-white">
      <%= link_to admin_orders_path, class: "text-amber-600 hover:text-orange-700 text-sm font-medium flex items-center group" do %>
        View all orders
        <i class="fas fa-arrow-right ml-2 text-xs transition-transform duration-300 group-hover:translate-x-1"></i>
      <% end %>
    </div>
  </div>
</div>

<!-- Data Tables -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
  <!-- Recent Orders -->
  <div class="bg-white rounded-xl shadow-lg overflow-hidden border border-gray-100">
    <div class="px-6 py-5 border-b border-gray-100 bg-white flex justify-between items-center">
      <div class="flex items-center">
        <div class="p-2 rounded-lg bg-gradient-to-br from-purple-500 to-indigo-600 text-white mr-3 shadow-md">
          <i class="fas fa-shopping-bag"></i>
        </div>
        <h2 class="text-lg font-semibold text-gray-800">Recent Orders</h2>
      </div>
      <span class="text-xs font-medium px-3 py-1.5 rounded-full bg-purple-100 text-purple-800"><%= @recent_orders.length %> orders</span>
    </div>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead>
          <tr class="bg-gray-50">
            <th scope="col" class="px-6 py-3.5 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Order ID</th>
            <th scope="col" class="px-6 py-3.5 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Customer</th>
            <th scope="col" class="px-6 py-3.5 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Status</th>
            <th scope="col" class="px-6 py-3.5 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Total</th>
            <th scope="col" class="px-6 py-3.5 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Date</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% if @recent_orders.any? %>
            <% @recent_orders.each do |order| %>
              <tr class="hover:bg-blue-50 transition-colors duration-150">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-blue-600">
                  <%= link_to "##{order.id}", admin_order_path(order), class: "hover:underline" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700 font-medium">
                  <%= order.user.full_name %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% case order.status %>
                  <% when 'pending' %>
                    <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">Pending</span>
                  <% when 'processing' %>
                    <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">Processing</span>
                  <% when 'completed' %>
                    <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">Completed</span>
                  <% when 'cancelled' %>
                    <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">Cancelled</span>
                  <% else %>
                    <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800"><%= order.status.capitalize %></span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  $<%= sprintf('%.2f', order.total) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= order.created_at.strftime('%b %d, %Y') %>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="5" class="px-6 py-8 text-sm text-center text-gray-500">No orders found</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="px-6 py-4 bg-gray-50 border-t border-gray-100 text-right">
      <%= link_to admin_orders_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-gradient-to-r from-purple-600 to-indigo-600 hover:from-purple-700 hover:to-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-all duration-200" do %>
        View All Orders
        <i class="fas fa-arrow-right ml-2"></i>
      <% end %>
    </div>
  </div>

  <!-- Top Selling Products -->
  <div class="bg-white rounded-xl shadow-lg overflow-hidden border border-gray-100">
    <div class="px-6 py-5 border-b border-gray-100 bg-white flex justify-between items-center">
      <div class="flex items-center">
        <div class="p-2 rounded-lg bg-gradient-to-br from-pink-500 to-rose-600 text-white mr-3 shadow-md">
          <i class="fas fa-chart-line"></i>
        </div>
        <h2 class="text-lg font-semibold text-gray-800">Top Selling Products</h2>
      </div>
      <span class="text-xs font-medium px-3 py-1.5 rounded-full bg-pink-100 text-pink-800"><%= @top_products.length %> products</span>
    </div>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead>
          <tr class="bg-gray-50">
            <th scope="col" class="px-6 py-3.5 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Product</th>
            <th scope="col" class="px-6 py-3.5 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Category</th>
            <th scope="col" class="px-6 py-3.5 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Price</th>
            <th scope="col" class="px-6 py-3.5 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Stock</th>
            <th scope="col" class="px-6 py-3.5 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Sold</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% if @top_products.any? %>
            <% @top_products.each do |product| %>
              <tr class="hover:bg-green-50 transition-colors duration-150">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-blue-600">
                  <%= link_to product.name, admin_product_path(product), class: "hover:underline" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm">
                  <% if product.category %>
                    <span class="px-2.5 py-1 text-xs rounded-full bg-gray-100 text-gray-800 font-medium"><%= product.category.name %></span>
                  <% else %>
                    <span class="text-gray-400">None</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  $<%= sprintf('%.2f', product.price) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm">
                  <% if product.stock > 10 %>
                    <span class="px-2.5 py-1 text-xs rounded-full bg-green-100 text-green-800 font-medium"><%= product.stock %> in stock</span>
                  <% elsif product.stock > 0 %>
                    <span class="px-2.5 py-1 text-xs rounded-full bg-yellow-100 text-yellow-800 font-medium"><%= product.stock %> left</span>
                  <% else %>
                    <span class="px-2.5 py-1 text-xs rounded-full bg-red-100 text-red-800 font-medium">Out of stock</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                  <span class="px-2.5 py-1 text-xs rounded-full bg-blue-100 text-blue-800 font-medium"><%= product.total_sold.to_i %> sold</span>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="5" class="px-6 py-8 text-sm text-center text-gray-500">No products sold yet</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="px-6 py-4 bg-gray-50 border-t border-gray-100 text-right">
      <%= link_to admin_products_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-gradient-to-r from-pink-600 to-rose-600 hover:from-pink-700 hover:to-rose-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-pink-500 transition-all duration-200" do %>
        View All Products
        <i class="fas fa-arrow-right ml-2"></i>
      <% end %>
    </div>
  </div>
</div>
